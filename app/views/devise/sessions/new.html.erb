<div class="log-in">

<div class="log-in-main">
  
  <div class="log-in-title">
    <h2>ログイン</h2>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br/>
    <%= f.password_field :password, autocomplete: "current-password", :class => "password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :必要事項を保存する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", :class => "sign-in-btn" %>
  </div>
<% end %>

</div>

</div>