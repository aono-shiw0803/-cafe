<div class="sign-up">

<div class="sign-up-main">
  
  <div class="sign-up-title">
    <h2>新規登録</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザー名 %><span>※必須[15文字以内]</span><br>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "name" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><span>※必須</span><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><span>※必須</span><br/>
    <% if @minimum_password_length %>
    <!--<em>(< @minimum_password_length %> characters minimum)</em>-->
    <em>(6文字以上の英数字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><span>※必須</span><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", :class => "sign-up-btn", data: {confirm: "登録してもよろしいですか？"} %>
  </div>
<% end %>

</div>

</div>